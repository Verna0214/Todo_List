<div class="container my-5">

  <ul class="list-group mx-auto" style="max-width: 800px">
    <div class="mb-3">
      <a href="/todos/new" class="btn btn-secondary" role="button">Create</a>
    </div>
    {{#each todos}}
    <li class="list-group-item list-group-item-warning d-flex justify-content-between align-items-center">
      <div>
        <input class="form-check-input me-3" type="checkbox" id="flexCheckDefault" style="border-color: #007bff" name="isDone" {{#if this.isDone}} checked {{/if}} disabled>
        <label class="form-check-label" for="flexCheckDefault">
        {{this.name}}
      </div>
      <div>
        <a href="/todos/{{this._id}}" class="btn btn-info btn-sm me-2" role="button">Detail</a>
        <a href="/todos/{{this._id}}/edit" class="btn btn-warning btn-sm me-2" role="button">Edit</a>
        <form action="/todos/{{this._id}}?_method=DELETE" method="POST" style="display: inline;">
          <button type="submit" class="btn btn-danger btn-sm me-2" >Delete</button>
        </form>
      </div>
    </li>
    {{/each}}
  </ul>

</div>