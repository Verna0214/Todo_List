<div class="container my-5">
  <ul class="list-group mx-auto" style="max-width: 800px">
    <li class="list-group-item list-group-item-warning d-flex justify-content-between align-items-center p-3">
    <div>
      <input class="form-check-input me-3" type="checkbox" id="flexCheckDefault" style="border-color: #007bff"
        name="isDone" {{#if todo.isDone}} checked {{/if}} disabled>
      <label class="form-check-label" for="flexCheckDefault">
        {{todo.name}}
    </div>
    <div>
      <a href="/todos/{{todo._id}}/edit" class="btn btn-warning btn-sm me-2" role="button">Edit</a>
      <a href="/" class="btn btn-success btn-sm me-2" role="button">Back</a>
      <form action="/todos/{{todo._id}}?_method=DELETE" method="POST" style="display: inline;">
        <button type="submit" class="btn btn-danger btn-sm me-2">Delete</button>
      </form>
    </div>
    </li>
  </ul>
</div>